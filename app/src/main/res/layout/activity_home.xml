<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:padding="16dp">

    <!-- Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1C1C1C"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:clipToPadding="false">

        <!-- First Component -->
        <TextView
            android:id="@+id/firstComponent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WeatherApp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Second Component with Icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/secondComponentIcon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/search"
                android:contentDescription="Icon" />
        </LinearLayout>


    </LinearLayout>
    <EditText
        android:id="@+id/userInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your input here"
        android:textColor="#FFFFFF"
        android:textColorHint="#AAAAAA"
        android:background="@color/black"
        android:layout_marginTop="16dp"
        android:padding="12dp" />


    <!-- Current Weather Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1C1C1C"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:elevation="4dp"
        android:gravity="center"

        android:clipToPadding="false">

        <!-- Weather Icon and Temperature -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Weather Icon -->
            <ImageView
                android:id="@+id/weatherIcon"
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:contentDescription="Weather Icon"
                android:src="@drawable/clear_day" />

            <!-- Column for Temperature and Description -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Temperature -->
                <TextView
                    android:id="@+id/temperature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="55Â°F"
                    android:textColor="#FFFFFF"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <!-- Weather Description -->
                <TextView
                    android:id="@+id/weatherDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mostly Clear"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>


        <!-- Location -->
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Los Angeles, California"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:layout_marginTop="18dp" />
    </LinearLayout>

    <!-- Additional Weather Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="#1C1C1C">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/humidityIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/humidity"
                android:contentDescription="Humidity Icon" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="94%"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/humidityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/windSpeedIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/wind_speed"
                android:contentDescription="WindSpeed Icon" />

            <TextView
                android:id="@+id/windSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="94%"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/windSpeedLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WindSpeed"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/visibilityIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/visibility"
                android:contentDescription="Humidity Icon" />

            <TextView
                android:id="@+id/visibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="94%"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/visibilityLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visibility"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/pressureIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/pressure"
                android:contentDescription="Pressure Icon" />

            <TextView
                android:id="@+id/pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="94%"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pressureLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressure"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Repeat similar blocks for Wind Speed, Visibility, and Pressure -->

    </LinearLayout>

    <!-- Weather Forecast -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1C1C1C"
        android:padding="8dp"
        android:layout_marginTop="20dp">

        <!-- Date -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="2024-11-11"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Weather Icon -->
        <ImageView
            android:id="@+id/ivWeatherIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:contentDescription="Weather Icon"
            android:src="@drawable/clear_day" />

        <!-- Temperature -->
        <TextView
            android:id="@+id/tvTemperature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="47Â°F"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Humidity -->
        <TextView
            android:id="@+id/tvHumidity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="71%"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
