            <!-- Current Weather Section -->
            <LinearLayout
                android:id="@+id/today_weather_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:orientation="vertical"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"

                android:background="#1C1C1C"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:elevation="4dp"
                android:gravity="center"

                android:clipToPadding="false">

                <!-- Weather Icon and Temperature -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Weather Icon -->
                    <ImageView
                        android:id="@+id/weatherIcon"
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Weather Icon"
                        android:src="@drawable/clear_day" />

                    <!-- Column for Temperature and Description -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Temperature -->
                        <TextView
                            android:id="@+id/temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="55Â°F"
                            android:textColor="#FFFFFF"
                            android:textSize="32sp"
                            android:textStyle="bold" />

                        <!-- Weather Description -->
                        <TextView
                            android:id="@+id/weatherDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mostly Clear"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>


                <!-- Location -->
                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not defined"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_marginTop="18dp" />
            </LinearLayout>

            <!-- Additional Weather Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:background="#1C1C1C">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/humidityIcon"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/humidity"
                        android:contentDescription="Humidity Icon" />

                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="94%"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/humidityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/windSpeedIcon"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/wind_speed"
                        android:contentDescription="WindSpeed Icon" />

                    <TextView
                        android:id="@+id/windSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="94%"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/windSpeedLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WindSpeed"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/visibilityIcon"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/visibility"
                        android:contentDescription="Humidity Icon" />

                    <TextView
                        android:id="@+id/visibility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="94%"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/visibilityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Visibility"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/pressureIcon"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:src="@drawable/pressure"
                        android:contentDescription="Pressure Icon" />

                    <TextView
                        android:id="@+id/pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="94%"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/pressureLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pressure"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Repeat similar blocks for Wind Speed, Visibility, and Pressure -->

            </LinearLayout>

            <!-- Weather Forecast -->
            <LinearLayout
                android:id="@+id/forecastContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1C1C1C"
                android:layout_marginTop="16dp"
                android:padding="2dp"/>

        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/add_fav"
        android:theme="@style/MyMaterialTheme"
        android:visibility="visible"
        android:contentDescription="Floating Button" />

        <FrameLayout
            android:id="@+id/progress_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"
            android:visibility="gone">

            <!-- Centered Container -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true" />

                <!-- TextView Below ProgressBar -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fetching Weather"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>

</FrameLayout>