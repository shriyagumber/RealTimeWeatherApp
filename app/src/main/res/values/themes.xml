<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base theme extending AppCompat -->
    <style name="Base.Theme.FinalAssign4" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.FinalAssign4.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/black</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.FinalAssign4</item>
    </style>

    <!-- Material Theme Example -->
    <style name="MyMaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/white</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>

    <!-- Button Text Appearance -->
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
    </style>

</resources>
